- content_for :title, @post.title
- content_for :meta_tags do
  %meta{property: 'og:url', content: request.original_url.split('?').first}
  %meta{property: 'og:type', content: 'article'}
  %meta{property: 'og:title', content: @post.title}
  %meta{property: 'og:description', content: truncate(strip_tags(@post.content), length: 200, separator: ' ')}
- content_for :body_id, 'post-page'

.row
  .large-10.large-offset-1.columns
    %h1.title= @post.title
    %h6.subheader.text-center
      = "#{@post.created_at.strftime('%B %d, %Y')} &nbsp;&bullet;&nbsp; In ".html_safe
      = link_to 'Posts', posts_archive_path
    .content 
      = @post.content.html_safe
    .social
      .social-icon
        .fb-like{'data-layout' => 'button', 'data-action' => 'like', 'data-show-faces' => 'false', 'data-share' => 'false'}
      .social-icon
        %a.twitter-share-button{'href' => 'https://twitter.com/share', 'data-text' => 'Do a GET request for this POST: ', 'data-lang' => 'fr'} Tweeter
      .social-icon
        %a{'data-pin-do' => 'buttonPin', 'data-pin-color' => 'white', 'data-description' => @post.title, 'href' => "https://www.pinterest.com/pin/create/button/?url#{request.original_url.split('?').first}"}
          = image_tag '//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_white_20.png'

