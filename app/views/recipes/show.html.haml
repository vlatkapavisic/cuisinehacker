- content_for :title, @recipe.title
- content_for :meta_tags do
  %meta{property: 'og:url', content: request.original_url.split('?').first}
  %meta{property: 'og:type', content: 'article'}
  %meta{property: 'og:title', content: @recipe.title}
  %meta{property: 'og:description', content: truncate(strip_tags(@recipe.description), length: 200, separator: ' ')}
  %meta{property: 'og:image', content: @recipe.photo_url}
- content_for :body_id, 'recipe-page'

.row
  .large-10.large-offset-1.columns
    %h1.title= @recipe.title
    %h6.subheader.text-center
      
      = "#{@recipe.created_at.strftime('%B %d, %Y')} &nbsp;&bullet;&nbsp; In ".html_safe
      = link_to "#{@recipe.category.name}", category_path(@recipe.category)
      = '&nbsp;&bullet;&nbsp;Recipe by '.html_safe
      - if @recipe.original?
        = "me"
      - else
        = link_to @recipe.author, @recipe.author_url, target: '_blank'
    %p= image_tag @recipe.photo_url

    %p= @recipe.description.html_safe
        
    %h3.subheader Ingredients
    %p= @recipe.ingredients

    - if @recipe.original?
      %h3.subheader Algorithm
      %p= @recipe.algorithm.html_safe
    - else
      %h3.subheader Recipe
      = link_to @recipe.recipe_url, @recipe.recipe_url, target: '_blank'

    .social
      .social-icon
        .fb-like{'data-layout' => 'box-count', 'data-action' => 'like', 'data-show-faces' => 'false', 'data-share' => 'false'}
      .social-icon
        %a.twitter-share-button{'href' => 'https://twitter.com/share', 'data-text' => 'Kitchen TODO: ', 'data-lang' => 'fr'} Tweeter
      .social-icon
        %a{'data-pin-do' => 'buttonPin', 'data-pin-color' => 'white', 'data-pin-count' => 'above', 'data-image' => @recipe.photo_url, 'data-description' => @recipe.title, 'href' => "https://www.pinterest.com/pin/create/button/?url#{request.original_url.split('?').first}=&media=#{@recipe.photo_url}"}
          = image_tag '//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_white_20.png'

:coffee
  $ ->
    $('.fb-like').click ->
      $('.fb-like iframe').remove()
