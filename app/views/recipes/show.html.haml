- content_for :title, @recipe.title
- content_for :meta_tags do
	%meta{property: 'og:url', content: request.original_url.split('?').first}
	%meta{property: 'og:type', content: 'article'}
	%meta{property: 'og:title', content: @recipe.title}
	%meta{property: 'og:description', content: truncate(@recipe.description, length: 200, separator: ' ')}
	%meta{property: 'og:image', content: @recipe.photo_url}
- content_for :body_id, 'recipe-page'


.row
	.large-10.columns
		/= link_to "<< #{@recipe.category.name} recipes", category_path(@recipe.category)
		%h1.title= @recipe.title
		%h6.subheader
			= "Published on #{@recipe.created_at.to_date.strftime('%d. %m. %Y.')} | Recipe by "
			- if @recipe.original?
				= "me"
			- else
				= link_to @recipe.author, @recipe.author_url, class: 'blog-link'

		%p= image_tag @recipe.photo_url

		%p= @recipe.description
				
		%h3.subheader Ingredients
		%p= @recipe.ingredients

		- if @recipe.original?
			%h3.subheader Algorithm
			%p= @recipe.algorithm
		- else
			%h3.subheader Recipe
			= link_to @recipe.recipe_url, @recipe.recipe_url, class: 'blog-link', target: '_blank'

