- content_for :title, @recipe.title
- content_for :meta_tags do
	%meta{property: 'og:url', content: request.original_url.split('?').first}
	%meta{property: 'og:type', content: 'article'}
	%meta{property: 'og:title', content: @recipe.title}
	%meta{property: 'og:description', content: truncate(@recipe.description, length: 200, separator: ' ')}
	%meta{property: 'og:image', content: @recipe.photo_url}


.row
	.large-9.columns
		/= link_to "<< #{@recipe.category.name} recipes", category_path(@recipe.category)
		%h1= @recipe.title

		%p= image_tag @recipe.photo_url

		%p 
			- if @recipe.original?
				Original
			- else
				%a{href: @recipe.recipe_url, target: '_blank'} Link to the recipe

		%p Ingredients: #{@recipe.ingredients}

		%p Description: #{@recipe.description}

		- if @recipe.original?
			%p Preparation: #{@recipe.preparation}







