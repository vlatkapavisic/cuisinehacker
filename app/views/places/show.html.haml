- content_for :title, @place.name
- content_for :meta_tags do
  %meta{property: 'og:url', content: request.original_url.split('?').first}
  %meta{property: 'og:type', content: 'article'}
  %meta{property: 'og:title', content: @place.name}
  %meta{property: 'og:description', content: truncate(strip_tags(@place.review), length: 200, separator: ' ')}
- content_for :body_id, 'place-page'

.row
  .large-10.large-offset-1.columns
    %h1.title= @place.name
    %h6.subheader.text-center
      = "#{@place.created_at.strftime('%B %d, %Y')} &nbsp;&bullet;&nbsp; In ".html_safe
      = link_to 'Places', places_map_path
    = image_tag @place.image.url
    %p= @place.review
    %h3.subheader Address
    %p= @place.address

    .social
      .social-icon
        .fb-like{'data-layout' => 'box_count', 'data-action' => 'like', 'data-show-faces' => 'false', 'data-share' => 'false'}
      .social-icon
        %a.twitter-share-button{'href' => 'https://twitter.com/share', 'data-text' => 'cd Paris && git checkout this place: ', 'data-lang' => 'fr'} Tweeter
      .social-icon
        %a{'data-pin-do' => 'buttonPin', 'data-pin-color' => 'white', 'data-pin-count' => 'above', 'data-description' => @place.name, 'href' => "https://www.pinterest.com/pin/create/button/?url#{request.original_url.split('?').first}"}
          = image_tag '//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_white_20.png'
